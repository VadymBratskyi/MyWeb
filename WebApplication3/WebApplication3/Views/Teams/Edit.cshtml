@using WebApplication3.Models
@model Team
@{
    ViewBag.Title = "Edit";
}
<div>
    <h2>Team @Model.Name</h2>
    <hr />
    @using (Html.BeginForm("Edit", "Teams", FormMethod.Post))
    {
        <fieldset>
            <legend>Futbol team</legend>

            <p>
                Team's name <br />
                @Html.EditorFor(model => model.Name)
            </p>
            <p>
                Coach <br />
                @Html.EditorFor(model => model.Coach)
            </p>
            <p class="btn btn-group">
                <input class="btn btn-primary" type="submit" value="Save" />
                @Html.ActionLink("Back to list", "Index", "Teams", null, new { @class = "btn btn-default" })
            </p>
        </fieldset>
    }
</div>

